{
  "compilerOptions": {
    "rootDir": "./source",
    "outDir": "./dist",
    "module": "Node16",
    "target": "ES2020",
    "types": ["node"],
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node16"
  },
  "include": ["source/**/*"],
  "exclude": ["node_modules", "dist"]
}